<launch>
    <!-- Launch Gazebo with your world -->
    <include file="$(find obstacle-avoidance-matd3)/launch/empty_world.launch" />


    <!-- BEGIN ROBOT 1-->
    <group ns="r0">
        <param name="tf_prefix" value="r0_tf" />
        <param name="robot_description"
            command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />
        <include file="$(find obstacle-avoidance-matd3)/launch/one_robot.launch" >
            <arg name="init_pose" value="-x 1 -y 0 -z 0" />
            <arg name="robot_name"  value="r0" />
        </include>
    </group>

    <!-- BEGIN ROBOT 2-->
    <group ns="r1">
        <param name="tf_prefix" value="r1_tf" />
        <param name="robot_description"
            command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />
        <include file="$(find obstacle-avoidance-matd3)/launch/one_robot.launch" >
            <arg name="init_pose" value="-x -1 -y 0 -z 0" />
            <arg name="robot_name"  value="r1" />
        </include>
    </group>


    <!-- Visualization -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find obstacle-avoidance-matd3)/rviz/turtlebot3_gazebo_model.rviz" />

</launch>